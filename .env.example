# Server Configuration
PORT=3000
JWT_SECRET=your_secure_jwt_secret_key

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/andikar
# For MongoDB Atlas connection
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/andikar?retryWrites=true&w=majority

# Admin API
ADMIN_API_URL=http://localhost:3001

# Humanizer Settings
DEFAULT_MODEL=andikar-v1
TEMPERATURE=0.7
HUMANIZER_API_KEY=your_api_key_here

# External API Usage Flag
USE_EXTERNAL_API=false

# Rate Limiting (optional, defaults in config.js)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX=100

# Node Environment
NODE_ENV=development
