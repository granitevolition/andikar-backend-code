# Server Configuration
PORT=3000
JWT_SECRET=your_secure_jwt_secret_key

# PostgreSQL Database Configuration
# Railway automatically sets these in production, this is for local development
# You can use the full connection string 
DATABASE_URL=postgres://postgres:postgres@localhost:5432/andikar

# Or use individual parameters
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=andikar
PGPORT=5432

# Admin API
ADMIN_API_URL=http://localhost:3001

# Humanizer Settings
DEFAULT_MODEL=andikar-v1
TEMPERATURE=0.7
HUMANIZER_API_KEY=your_api_key_here

# External API Usage Flag
USE_EXTERNAL_API=false

# Trust Proxy - set to true when behind a reverse proxy (like Railway)
TRUST_PROXY=true

# Rate Limiting (optional, defaults in config.js)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX=100

# Node Environment
NODE_ENV=development
